    "quickSort3Way 快速排序": {
        "scope": "c,cpp",
        "prefix": "quickSort3Way快速排序",
        "body": [
            "void swap(int*a,int*b){",
            "    int temp=*a;",
            "    *a=*b;",
            "    *b=temp;",
            "}",
            "void quickSort3Way(int arr[],int low,int high){",
            "    if (low<high){",
            "        int lt=low, gt=high;",
            "        int pivot=arr[low];",
            "        int i=low+1;",
            "        while (i<=gt){",
            "            if(arr[i]<pivot){",
            "                swap(&arr[lt++],&arr[i++]);",
            "            } else if(arr[i]>pivot){",
            "                swap(&arr[i],&arr[gt--]);",
            "            } else{",
            "                i++;",
            "            }",
            "        }",
            "        quickSort3Way(arr,low,lt-1);",
            "        quickSort3Way(arr,gt+1,high);",
            "    }",
            "}"
        ],
        "description": "fun 快速排序（三向切分）"
    }
